{
    "name": "mondaphp/framework",
    "description": "a lightweight and high performance PHP web development framework base on WorkerMan",
    "type": "framework",
    "keywords": [
        "php framework",
        "herosphp",
        "lightweight",
        "WorkerMan"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "ext-curl": "*",
        "illuminate/redis": "^9.0",
        "illuminate/database": "^9.0",
        "illuminate/events": "^9.0",
        "illuminate/pagination": "^9.0",
        "nikic/fast-route": "^1.3",
        "workerman/workerman": "^4.0",
        "workerman/redis-queue": "^1.0",
        "symfony/console": "^6.0",
        "doctrine/inflector": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "herosphp\\": "./src"
        }
    },
    "require-dev": {
        "laravel/pint": "^0.1.7",
        "phpstan/phpstan": "^1.7"
    },
    "minimum-stability": "stable",
    "suggest": {
        "ext-event": "For better performance. "
    },
    "prefer-stable": true,
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "scripts": {
        "analyse": "phpstan analyse --memory-limit=-1 -l 5 -c phpstan.neon"
    }
}
